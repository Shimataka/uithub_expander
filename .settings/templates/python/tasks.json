{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo-pwd",
            "type": "shell",
            "command": "pwd"
        },
        {
            "label": "py-make-env",
            "type": "process",
            "command": ".settings/templates/python/makeenv.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "py-ruff",
            "type": "shell",
            "command": "uvx",
            "args": [
                "ruff",
                "check",
                "${workspaceFolder}/src"
            ],
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "py-ruff-test",
            "type": "shell",
            "command": "uvx",
            "args": [
                "ruff",
                "check",
                "${workspaceFolder}/tests"
            ],
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "py-mypy",
            "type": "shell",
            "command": "uvx",
            "args": [
                "mypy",
                "--config-file=${workspaceFolder}/pyproject.toml"
            ],
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/.venv/bin/python"
                }
            }
        },
        {
            "label": "py-pytest",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pytest",
                "${workspaceFolder}/tests"
            ],
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/.venv/bin/python"
                }
            }
        },
        {
            "label": "py-code-check",
            "type": "shell",
            "command": "echo code check",
            "dependsOrder": "parallel",
            "dependsOn": [
                "py-ruff",
                "py-ruff-test",
                "py-mypy",
                "py-pytest"
            ],
            "group": "build"
        },
        {
            "label": "py-sphinx-apidoc",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "sphinx-apidoc",
                "-f",
                "-o",
                "${workspaceFolder}/docs/source",
                "${workspaceFolder}/src"
            ],
            "hide": true
        },
        {
            "label": "py-sphinx-make",
            "type": "shell",
            "command": "make",
            "args": [
                "html"
            ],
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}/docs",
                "env": {
                    "SPHINXBUILD": "${workspaceFolder}/.venv/bin/sphinx-build"
                }
            }
        },
        {
            "label": "py-docs-gen",
            "type": "shell",
            "command": "echo build docs",
            "dependsOrder": "sequence",
            "dependsOn": [
                "py-sphinx-apidoc",
                "py-sphinx-make"
            ],
            "group": "build"
        },
        {
            "label": "py-pre-commit",
            "type": "shell",
            "command": "echo pre-commit",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "py-code-check",
                "py-docs-gen"
            ]
        }
    ]
}
